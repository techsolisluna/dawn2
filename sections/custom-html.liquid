{% for block in section.blocks %}
    {% if block.type == 'text' %}
        {% if block.settings.section_html != blank %}
            <div class="pxs-rich-text-content rte">
                {{ block.settings.section_html }}
            </div>
        {% endif %}
    {% endif %}
{% endfor %}

{% schema %}
    {
      "name": "HTML Customizado",
      "tag": "section",
      "class": "section",
      "settings": [
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 40
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 52
        }
      ],
      "blocks": [
        {
            "type": "text",
            "name": "HTML",
            "settings": [
                {
                "type": "html",
                "id": "section_html",
                "label": "HTML Customizado",
                "default": "<p>Cole aqui seu HTML</p>"
                },
            ]
        }
      ],
      "presets": [
        {
          "name": "HTML Customizado"
        }
      ]
    }
{% endschema %}