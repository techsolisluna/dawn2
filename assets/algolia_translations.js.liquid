  algolia.translation_helpers = {
    no_result_for: function(text) {
      return 'Sem resultado para " ' + text + ' ".';
    },
    in: function(processingTimeMS) {
      return 'em ' + processingTimeMS / 1000 + 's';
    },

    outOf: function(page, hitsPerPage, nbHits) {
      return (
        page * hitsPerPage +
        1 +
        '-' +
        Math.min((page + 1) * hitsPerPage, nbHits) +
        ' de'
      );
    },

    by: function(text) {
      if (!text) return '';
      return ' de ' + text;
    },

    render_title: function(text, query){
      if (text === 'Produtos' && query) {
        return text + ' para ' + query;
      }
      return text;
    }
  };
